<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.yamcs.csstudio.product.application"
            name="yamcs-studio">
         <property
               name="windowImages"
               value="platform:/plugin/org.yamcs.csstudio.product/icons/css16.png,platform:/plugin/org.yamcs.csstudio.product/icons/css32.png,platform:/plugin/org.yamcs.csstudio.product/icons/css48.png,platform:/plugin/org.yamcs.csstudio.product/icons/css64.png,platform:/plugin/org.yamcs.csstudio.product/icons/css128.png"/>
         <property
               name="aboutImage"
               value="platform:/plugin/org.yamcs.csstudio.product/icons/aboutSide.png"/>
         <property
               name="aboutText"
               value="Control System Studio (CSS) is a combined&#x0A;effort of several parties, including&#x0A;- SNS (Oak Ridge, TN).&#x0A;- BNL (Brookhaven, NY)&#x0A;- DESY (Hamburg, Germany)&#x0A;&#x0A;&#x0A;It provides a collection of control system&#x0A;tools in a common environment, based&#x0A;on Eclipse.&#x0A;&#x0A;See http://ics-web.sns.ornl.gov/css"/>
         <property
               name="appName"
               value="Yamcs Studio">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFDFA">
         </property>
         <property
               name="startupMessageRect"
               value="20,195,340,20">
         </property>
         <property
               name="startupProgressRect"
               value="20,215,340,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
            name="introTitle"
            value="Welcome to Control System Studio (CSS) for the SNS!">
         </property>
         <property
            name="introBrandingImage"
            value="product:icons/css64.png"/>
         <property
            name="introBrandingImageText"
            value="Yamcs Studio"/>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.applications"
         id="application"
		 name="SNS CSS">
      <application>
         <run
               class="org.csstudio.startup.application.Application">
         </run>
      </application>
   </extension>

   <!-- Note that the classes listed in here should be in plugins
        that can be loaded without locking the workspace.
        This means the plugins loaded for these classes
        should not use preferences or anything else that
        triggers initialization of the workspace
     -->
   <extension point="org.csstudio.startup.module">
      <startupParameters class="org.csstudio.utility.product.StartupParameters"/>
      <workspace class="org.csstudio.utility.product.WorkspacePrompt"/>
      <workbench class="org.csstudio.utility.product.Workbench"/>
      <project class="org.csstudio.startup.module.defaults.DefaultProject"/>
   </extension>

   <extension point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=file">
         <toolbar id="additions">
         </toolbar>
      </menuContribution>
   </extension>
   

</plugin>
