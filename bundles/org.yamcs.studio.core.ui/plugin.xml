<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.yamcs.studio"
            name="Yamcs">
      </category>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.core.ui.autoconnect"
            name="Autoconnect">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.core.ui.connect"
            name="Connect">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.core.ui.disconnect"
            name="Disconnect">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.ui.login"
            name="Login">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.ui.restartInstance"
            name="Restart Instance">
      </command>
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
      <handler
            commandId="org.yamcs.studio.ui.login"
            class="org.yamcs.studio.core.ui.connections.LoginHandler"/>
      <handler 
            commandId="org.yamcs.studio.core.ui.autoconnect" 
            class="org.yamcs.studio.core.ui.connections.AutoConnectHandler"/>
      <handler
            commandId="org.yamcs.studio.core.ui.connect"
            class="org.yamcs.studio.core.ui.connections.ConnectHandler"/>
      <handler
            commandId="org.yamcs.studio.core.ui.disconnect"
            class="org.yamcs.studio.core.ui.connections.DisconnectHandler">
         <activeWhen>
            <with variable="org.yamcs.studio.ui.state.connected">
               <equals value="true"/>
            </with>
         </activeWhen>
      </handler>
      <handler
            commandId="org.yamcs.studio.ui.restartInstance"
            class="org.yamcs.studio.core.ui.RestartInstanceHandler">
         <activeWhen>
            <with variable="org.yamcs.studio.ui.state.connected">
               <equals value="true"/>
            </with>
         </activeWhen>
      </handler>
   </extension>
   
   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="menu:org.eclipse.ui.main.menu?after=edit">
         <menu 
               id="yamcs"
               label="Yamcs">
            <visibleWhen checkEnabled="false">
               <with variable="activeWorkbenchWindow.activePerspective">
                  <equals value="org.csstudio.opibuilder.OPIRuntime.perspective" />
               </with>
            </visibleWhen>
            <separator
                  name="additions"
                  visible="true"/>
            <command
                  commandId="org.yamcs.studio.ui.restartInstance"
                  label="Restart Instance"
                  style="push"/>
         </menu>
      </menuContribution>
   </extension>
   
   <extension point="org.eclipse.ui.preferencePages">
      <page
            class="org.yamcs.studio.core.ui.prefs.ConnectionPreferencePage"
            id="org.yamcs.studio.core.ui.prefs.ConnectionPreferencePage"
            name="Yamcs Server">
      </page>
   </extension>
</plugin>
